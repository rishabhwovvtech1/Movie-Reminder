<div class="form-group col-md-6">
  <%= f.label :username, 'Username' %>
  <%= f.text_field :username, class: 'form-control input feedr-main-input', required: true %>

</div>

<div class="form-group col-md-6">
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name, class: 'form-control input feedr-main-input', required: true %>

</div>

<div class="form-group col-md-6">
  <%= f.label :phone_number, 'Phone Number' %>
  <%= f.text_field :phone_number, class: 'form-control input feedr-main-input' %>
</div>

  <div class="form-group col-md-6">
    <%= f.label :password, 'Password' %>
    <% if form_type=='edit' %>
    <%= f.password_field :password,value: nil, class: 'form-control input feedr-main-input', placeholder: "Adding password here will update current password"  %>
      <% else %>
    <%= f.password_field :password,value: nil, class: 'form-control input feedr-main-input', required: true %>
      <% end %>
  </div>


<%= javascript_include_tag 'users/form' %>
