<div class="form-group col-md-6">
  <%= f.label :description, 'Question' %>
  <%= f.text_field :description, class: 'form-control input feedr-main-input', required: true %>
</div>
<div class="form-group col-md-6">
  <%= f.label :topic_id, 'Topic' %>
  <%= f.select :topic_id, Topic.all.pluck(:name, :id), {include_blank: "Select a topic"},
        { class: 'feedr-main-select form-control', 'data-behavior' => "chosen-select", required: true } %>
</div>
